{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette":{
    "os": "#FFFFFF",
    "text": "#afcc96",
    "path": "#7F9FBE",
    "closer": "p:os",
    "navy": "#335666",
    "matcha": "#F6FACB",
    "indigo": "#A3BE8C",
    "blue":  "#8AADF4",
    "error": "#E98B8B",
    "lavender": "#B7BDF8",
    "root_grey": "#9C9C9C",
    "redhot": "#4C566A",
    "grey": "#4C566A"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:text",
          "style":"plain",
          "template": "{{.UserName}}@{{.HostName}}:",
          "type": "session"
        },
        {
          "foreground": "p:root_grey",
          "style": "plain",
          "template": "\ue231",
          "type": "root"
        },
        {
          "foreground": "p:path",
          "properties": {
            "folder_separator_icon": "/",
            "home_icon": "~",
            "mapped_locations": {
              "C:\\Users": "\uf007",
              "C:\\Windows": "\ue70f"
            },
            "style": "full",
            "mixed_threshold": 6
          },
          "style": "plain",
          "template": "{{.Path}}",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "foreground": "p:lavender",
          "properties": {
            "display_mode": "environment",
            "fetch_virtual_env": true,
	          "fetch_version": true,
            "display_default": true,
            "home_enabled": true
          },
          "style": "plain",
          "template": " \ue235  {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "type": "python"
        },
        {
          "foreground": "p:indigo",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf594 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          },
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "style": "plain",
          "type": "git"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:grey",
          "style": "plain",
          "template": ">",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{.UserName}}@{{.HostName}} :: {{.Shell}}",
  "final_space": true,
  "version": 2
}
